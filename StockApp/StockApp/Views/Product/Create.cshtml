@model StockApp.Models.Products.RegisterProductViewModel
@{
    ViewData["Title"] = "Crear producto";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-black text-light">
                    <h4>Crear Producto</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Product" asp-action="Create">

                        @if (Model.HasError)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <p>@Model.Error</p>
                                <buttom type="buttom" class="btn-close" data-bs-dismiss="alert" aria-label="Close"> </buttom>
                            </div>
                        }


                        <div class="mb-2">
                            <label asp-for="Name" class="form-label">Nombre: </label>
                            <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Brand" class="form-label">Marca: </label>
                            <input asp-for="Brand" class="form-control" placeholder="Ingrese la marca" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Category" class="form-label">Categoria </label>
                            <input asp-for="Category" class="form-control" placeholder="Ingrese la categoria" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>


                        <div class="mb-2">
                            <label asp-for="Price" class="form-label">Precio: </label>
                            <input asp-for="Price" type="number" class="form-control" placeholder="Ingrese el precio" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Stock" class="form-label">Stock: </label>
                            <input asp-for="Stock" type="number" class="form-control" placeholder="Ingrese el stock" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>


                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Registrar</button>
                            <a asp-controller="Product" asp-action="Index" class="btn btn-warning">Volver</a>

                        </div>


                    </form>
                </div>

            </div>

        </div>
    </div>


</div>
