@model StockApp.Models.Users.UpdateUserViewModel

@{
    ViewData["Title"] = "Actualizar usuario";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-black text-light">
                    <h4>Actualizar Usuario</h4>

                </div>
                <div class="card-body">
                    <form method="post" asp-controller="User" asp-action="Update">

                        @if (Model.HasError)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <p>@Model.Error</p>
                                <buttom type="buttom" class="btn-close" data-bs-dismiss="alert" aria-label="Close"> </buttom>
                            </div>
                        }


                        <div class="mb-2">
                            <label asp-for="FirstName" class="form-label">Nombre: </label>
                            <input asp-for="FirstName" class="form-control" placeholder="Ingrese el nombre" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label asp-for="LastName" class="form-label">Apellido: </label>
                            <input asp-for="LastName" class="form-control" placeholder="Ingrese el apellido" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Phone" class="form-label">Telefono </label>
                            <input asp-for="Phone" class="form-control" placeholder="Ingrese el telefono" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>


                        <div class="mb-2">
                            <label asp-for="UserName" class="form-label">Nombre de usuario: </label>
                            <input asp-for="UserName" class="form-control" placeholder="Ingrese el nombre de usuario" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Email" class="form-label">Correo: </label>
                            <input asp-for="Email" class="form-control" placeholder="Ingrese el correo" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>


                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <a asp-controller="User" asp-action="Index" class="btn btn-warning">Volver</a>

                        </div>


                    </form>
                </div>

            </div>

        </div>
    </div>


</div>