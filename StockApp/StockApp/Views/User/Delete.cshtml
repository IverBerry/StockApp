@model int
@{

    ViewData["Title"] = "Eliminar usuario";

}
<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-black text-light">
                    <h4>Esta Seguro de eliminar este usuario</h4>

                </div>
                <div class="card-body">
                    <form method="post" asp-controller="User" asp-action="DeletePost">
                        

                        <input type="hidden" for="Id" name="Id" id="Id" value="@Model" />

                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a asp-controller="User" asp-action="Index" class="btn btn-warning">Volver</a>


                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>
</div>